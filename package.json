{
  "name": "central-vault",
  "version": "4.0.0",
  "description": "Professional Knowledge Hub and Secure Vault",
  "author": "Sparsh Sharma",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "export": "next build && next export",
    "electron:dev": "electron .",
    "electron:build": "electron-builder build --win",
    "mobile:init": "npx cap init",
    "mobile:add": "npx cap add android",
    "mobile:sync": "npx cap sync",
    "mobile:open": "npx cap open android"
  },
  "main": "electron-main.js",
  "build": {
    "appId": "com.centralvault.app",
    "productName": "CentralVault",
    "asar": true,
    "directories": {
      "output": "dist-electron",
      "buildResources": "public"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/favicon.png"
    },
    "files": [
      "!**/*",
      "electron-main.js",
      "package.json",
      "public/**/*"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "installerIcon": "public/favicon.png",
      "uninstallerIcon": "public/favicon.png",
      "deleteAppDataOnUninstall": true
    }
  },
  "dependencies": {
    "@capacitor/android": "^5.6.0",
    "@capacitor/core": "^5.6.0",
    "@supabase/auth-helpers-nextjs": "^0.8.7",
    "@supabase/auth-helpers-react": "^0.15.0",
    "@supabase/supabase-js": "^2.39.3",
    "clsx": "^2.1.0",
    "date-fns": "^3.3.1",
    "dexie": "^3.2.4",
    "dotenv": "^17.2.3",
    "framer-motion": "^10.18.0",
    "lucide-react": "^0.309.0",
    "next": "14.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@capacitor/cli": "^5.6.0",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "autoprefixer": "^10.4.17",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.1.0",
    "postcss": "^8.4.33",
    "supabase": "^1.131.4",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  }
}