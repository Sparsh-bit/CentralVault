# =====================================================
# PHASE 2 - Environment Variables Template
# =====================================================
# Copy this to .env.local and fill in your values

# =====================================================
# PHASE 1 - Existing (Do Not Change)
# =====================================================

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =====================================================
# PHASE 2 - New AI Configuration
# =====================================================

# Google Gemini API
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key

# YouTube Data API (Optional - for enhanced video metadata)
# Get from: https://console.cloud.google.com/apis/credentials
# If not provided, will use oEmbed API (limited metadata)
YOUTUBE_API_KEY=

# =====================================================
# PHASE 2 - AI Processing Configuration
# =====================================================

# Batch size for queue processing (default: 10)
AI_PROCESSING_BATCH_SIZE=10

# Maximum retry attempts for failed AI jobs (default: 3)
AI_MAX_RETRIES=3

# Timeout for AI processing in milliseconds (default: 30000)
AI_TIMEOUT_MS=30000

# Cron secret for queue processor (generate a random string)
# Used to authenticate cron job requests
CRON_SECRET=generate-a-random-secret-here

# =====================================================
# PHASE 2 - Feature Flags (Optional)
# =====================================================

# Enable/disable AI features globally (default: true)
NEXT_PUBLIC_AI_ENABLED=true

# Show AI confidence scores in UI (default: true)
NEXT_PUBLIC_SHOW_AI_CONFIDENCE=true

# Enable batch processing UI (default: true)
NEXT_PUBLIC_ENABLE_BATCH_PROCESSING=true

# =====================================================
# PRODUCTION CONSIDERATIONS
# =====================================================

# Rate limiting for AI API calls (requests per minute)
AI_RATE_LIMIT_RPM=60

# Cost tracking (optional)
AI_COST_TRACKING_ENABLED=false

# Logging level (development|production)
LOG_LEVEL=development

# =====================================================
# NOTES
# =====================================================

# 1. NEVER commit .env.local to version control
# 2. Rotate CRON_SECRET regularly for security
# 3. Monitor Gemini API usage to avoid cost overruns
# 4. Test in staging before deploying to production
# 5. Use different API keys for development and production
